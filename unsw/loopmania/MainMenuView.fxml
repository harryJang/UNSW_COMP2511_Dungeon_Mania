<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- TODO = modify and expand the range of menus available from the menu menu, and develop game modes you can select when starting a new game -->
<!-- vertically stacked label and button -->

<VBox fx:id="content" alignment="CENTER" prefHeight="475.0" prefWidth="1042.0" spacing="20.0" styleClass="root" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label contentDisplay="CENTER" prefHeight="102.0" prefWidth="131.0" text="   Main Menu" textAlignment="CENTER" textFill="#070101">
         <font>
            <Font size="18.0" />
         </font></Label>
      <!-- clicking button should start/resume the game -->
      <Button fx:id="startGameButton" onAction="#switchToGame" text="Start Game" />
      <Button fx:id="flagButton" onAction="#showflag" text="Dont' click me!" />

   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>